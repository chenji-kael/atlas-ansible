[Unit]
Description=atlas manager service
After=syslog.target network.target remote-fs.target nss-lookup.target

[Service]
LimitNOFILE=1000000
LimitSTACK=10485760
User=root
ExecStart=/bin/bash -c '{{ deploy_dir }}/scripts/run_atlas_manager.sh'
Restart=always
RestartSec=15s

[Install]
WantedBy=multi-user.target